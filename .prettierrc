{
	"tabWidth": 3,
	"useTabs": true,
	"bracketSameLine": true,
	"printWidth": 120,
	"semi": false,
	"trailingComma": "none",
	"arrowParens": "always",
	"bracketSpacing": true,
	"overrides": [
		{
			"files": ["./app/snippets/*.ts", "./app/snippets/**/*.ts"],
			"options": {
				"printWidth": 80
			}
		}
	],
	"plugins": ["prettier-plugin-organize-imports"]
}
