{
    "compilerOptions": {
        "lib": ["ESNext", "DOM"],

        "module": "ESNext",
        "target": "ESNext",

        "moduleDetection": "force",

        "noEmit": true,

        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noUncheckedIndexedAccess": true,
        "noPropertyAccessFromIndexSignature": true,
        "exactOptionalPropertyTypes": true,
        "checkJs": true
    },
    "include": ["."]
}
