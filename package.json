{
    "type": "module",
    "name": "purify-js",
    "version": "0.0.0",
    "workspaces": [
        "./apps/*",
        "./packages/*"
    ],
    "exports": {
        ".": {
            "default": "./packages/purify-js/lib/all.js",
            "types": "./packages/purify-js/lib/all.d.ts"
        }
    },
    "scripts": {
        "format": "prettier -w ./",
        "types": "tsc ./packages/purify-js/lib/*.js --declaration --allowJs --emitDeclarationOnly --outDir types"
    },
    "devDependencies": {
        "@eslint/js": "^9.2.0",
        "eslint": "^8.57.0",
        "prettier": "latest",
        "prettier-plugin-organize-imports": "latest",
        "typescript": "^5.4.5",
        "typescript-eslint": "^7.8.0"
    }
}
