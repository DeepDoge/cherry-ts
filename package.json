{
	"type": "module",
	"name": "master-ts",
	"scripts": {
		"format": "prettier -w ./",
		"test": "run-p test:*",
		"test-watch": "run-p --race test-watch:*",
		"test:types": "tsc --noEmit",
		"test-watch:types": "tsc --watch --noEmit",
		"test:node": "tsx --test library/**/*.test.ts",
		"test-watch:node": "tsx --test --watch library/**/*.test.ts"
	},
	"devDependencies": {
		"@types/node": "^20.1.2",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.8.8",
		"prettier-plugin-organize-imports": "^3.2.2",
		"ts-node": "^10.9.1",
		"tsx": "^3.12.7"
	}
}
