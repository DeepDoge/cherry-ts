{
	"type": "module",
	"name": "experiment",
	"scripts": {
		"format": "prettier -w ./",
		"dev": "vite --host",
		"build": "vite build",
		"preview": "vite preview --host",
		"test": "tsc --noEmit && tsx --test ./app/**.test.ts ./lib/*/**.test.ts",
		"test:dev:tsc": "tsc --noEmit --watch",
		"test:dev:tsx": "tsx --watch --test ./app/**.test.ts ./lib/**.test.ts",
		"test:dev": "run-p --race test:dev:*"
	},
	"devDependencies": {
		"@types/node": "^20.5.7",
		"@types/prismjs": "^1.26.0",
		"@typescript-eslint/eslint-plugin": "^5.59.2",
		"marked": "^8.0.1",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.8.8",
		"prettier-plugin-organize-imports": "^3.2.2",
		"tsx": "^3.12.7",
		"typescript": "^5.1.6",
		"vite": "^4.4.4",
		"vite-plugin-singlefile": "^0.13.5"
	}
}
