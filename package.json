{
    "type": "module",
    "name": "master-ts-workspace",
    "workspaces": [
        "./apps/*",
        "./packages/*"
    ],
    "scripts": {
        "format": "bunx --bun prettier -w ./",
        "docs:dev": "bun run ./apps/docs/scripts/dev.ts",
        "docs:build": "bun run ./apps/docs/scripts/build.ts",
        "docs:typecheck": "bunx --bun tsc -p ./apps/docs --noEmit",
        "todo:dev": "bun run ./apps/todo/scripts/dev.ts",
        "todo:build": "bun run ./apps/todo/scripts/build.ts",
        "empty:build": "bun run ./apps/empty/scripts/build.ts && bunx --bun minify-all-cli -s ./apps/empty/out/bun -d ./apps/empty/out/min -x && bunx --bun minify-all-cli -s ./apps/empty/out/bun -d ./apps/empty/out/gzip -g -x",
        "master-ts:typecheck": "bunx --bun tsc -p ./packages/master-ts --noEmit",
        "tests": "bun master-ts:typecheck && bun docs:typecheck && bun html:typecheck && bun test"
    },
    "devDependencies": {
        "bun-types": "^1.0.6",
        "prettier": "^3.0.3",
        "prettier-plugin-organize-imports": "^3.2.3",
        "typescript": "^5.2.2"
    }
}
