{
	"type": "module",
	"name": "master-ts-workspace",
	"workspaces": [
		"./apps/*",
		"./packages/*"
	],
	"scripts": {
		"format": "bunx --bun prettier -w ./",
		"docs:dev": "bun run ./apps/docs/scripts/dev.ts",
		"docs:build": "bun run ./apps/docs/scripts/build.ts",
		"docs:typecheck": "bunx --bun tsc -p ./apps/docs --noEmit",
		"html:start": "bun run ./apps/html-experiment/src/server.ts",
		"html:typecheck": "bunx --bun tsc -p ./apps/html-experiment --noEmit",
		"spa:dev": "bunx --bun vite ./apps/spa-example --host",
		"spa:build": "bunx --bun vite build ./apps/spa-example",
		"spa:preview": "bunx --bun vite preview ./apps/spa-example --host",
		"spa:typecheck": "bunx --bun tsc -p ./apps/spa-example --noEmit",
		"master-ts:typecheck": "bunx --bun tsc -p ./packages/master-ts --noEmit",
		"test": "bun master-ts:typecheck && bun docs:typecheck && bun spa-example:typecheck && bun html-experiment:typecheck && bun test"
	},
	"devDependencies": {
		"prettier": "^2.8.8",
		"prettier-plugin-organize-imports": "^3.2.2",
		"typescript": "^5.2.2"
	}
}
